<?xml version="1.0"?>
<config>
	  <tabs>
		<mageline translate="label" module="sellsy">
            <label>MageLine Modules</label>
            <sort_order>0</sort_order>
        </mageline>
	  </tabs>
	  <sections>
		<sellsy  translate="label" module="sellsy">                    
